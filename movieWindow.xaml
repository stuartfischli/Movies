<Window x:Class="movies.movieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:movies"
        mc:Ignorable="d" Height="450" Width="800" WindowState="Maximized" KeyDown="Window_KeyDown" Closed="Window_Closed" SnapsToDevicePixels="True">

    <Grid x:Name="movieGrid" Background="Black">
        <Rectangle x:Name="movieBorder" HorizontalAlignment="Center" Height="500" Stroke="#FFF30909" VerticalAlignment="Center" Width="800" Fill="Black"/>
        <Image x:Name="playButton" Margin="372,189,379,194" Source="/playButton.png" Stretch="Fill" Cursor="Hand" MouseLeftButtonUp="playButton_MouseLeftButtonUp"/>
        <Image x:Name="fullScreenButton" HorizontalAlignment="Left" Height="16" Margin="775,409,0,0" VerticalAlignment="Top" Width="15" Source="/fullScreenButton.png" Cursor="Hand" MouseLeftButtonUp="fullScreenButton_MouseLeftButtonUp"/>

    </Grid>
</Window>
